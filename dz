#include <stdio.h>
#include <math.h>
float F(float x){
    float result=x*x;
    return result;
}
float dF(float x){
    float result=2*x;
    return result;
}
int main()
{
    int i=0;
    float x, delt;
    printf("a=");
    scanf("%f",&x);
    printf("delt=");
    scanf("%f",&delt);
    do {
        x=x-F(x)/dF(x);
        i=i+1;
    } while(fabs(F(x))>=delt);
    printf("%f\n",x);
    printf("%d\n", i);
}
